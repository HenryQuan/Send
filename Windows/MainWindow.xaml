<Window x:Class="Send.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Send"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Send" Height="310" Width="500"
        MinHeight="200" MinWidth="300">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="About" />
            <MenuItem Header="How to use" />
            <MenuItem Header="Check for update" />
        </Menu>
        <StackPanel Margin="16" DockPanel.Dock="Top">
            <DockPanel Margin="0 0 0 8">
                <TextBlock Text="IP Address " />
                <TextBox Margin="8 0 0 0" />
            </DockPanel>
            <DockPanel>
                <TextBlock Text="Delay: 1000ms" Margin="0 0 8 0" Name="delayText" />
                <Slider x:Name="delaySlider" Maximum="30" Minimum="1" Value="10" ValueChanged="delaySlider_ValueChanged"/>
            </DockPanel>
        </StackPanel>
        <TextBox Margin="16 0 16 16"/>
    </DockPanel>
</Window>
