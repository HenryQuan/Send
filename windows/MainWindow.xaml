<Window x:Class="SendText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendText"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SendText" Height="310" Width="500" >
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top">
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="Enter the IP address: " />
                <TextBox x:Name="ipBox" />
            </DockPanel>
            <Button Click="receiveText">
                <TextBlock>RECEIVE TEXT</TextBlock>
            </Button>
        </StackPanel>
        <TextBox DockPanel.Dock="Bottom" Margin="0,8,0,0" x:Name="phoneBox" IsReadOnly="True" TextWrapping="Wrap"/>
    </DockPanel>
</Window>
