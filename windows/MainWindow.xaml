<Window x:Class="SendText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendText"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SendText" Height="310" Width="500" >
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="About" Click="About_Click"/>
            <MenuItem Header="Latest release" Click="GitHub_Click" />
        </Menu>

        <DockPanel Margin="8">
            <DockPanel DockPanel.Dock="Top" >
                <TextBlock Text="Enter the IP address: " />
                <TextBox x:Name="ipBox" />
            </DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <Button x:Name="startBtn" Click="receiveText" Margin="0,8,0,0">
                    <TextBlock><Run Text="START"/></TextBlock>
                </Button>
            </StackPanel>
            <TextBox x:Name="phoneBox"  Margin="0,8,0,0" IsReadOnly="True" TextWrapping="Wrap"/>
        </DockPanel>
    </DockPanel>
</Window>
